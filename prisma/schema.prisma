generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VEHICLE_TYPE {
  SMALL
  LARGE
}

enum SPOT_STATUS {
  BOOKED
  RESERVED
  EMPTY
}

model Garage {
  id          Int           @id @default(autoincrement())
  zipcode     String
  rate_reg    Decimal
  rate_large  Decimal
  rate_medium Decimal
  rate_small  Decimal
  Spot        Spot[]
  Reservation Reservation[]

  @@map("garage")
}

model Spot {
  id           Int           @id @default(autoincrement())
  vehicle_type VEHICLE_TYPE  @default(LARGE)
  status       SPOT_STATUS   @default(EMPTY)
  garage_id    Int
  garage       Garage        @relation(fields: [garage_id], references: [id])
  Reservation  Reservation[]

  @@map("spots")
}

model Reservation {
  id         Int      @id @default(autoincrement())
  garage_id  Int
  garage     Garage   @relation(fields: [garage_id], references: [id])
  spot_id    Int
  spot       Spot     @relation(fields: [spot_id], references: [id])
  start      DateTime @default(now())
  end        DateTime
  paid       Boolean
  vehicle_id Int?
  vehicle    Vehicle? @relation(fields: [vehicle_id], references: [id])

  @@map("reservations")
}

model User {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  first_name String
  last_name  String?

  email String @unique
  hash  String

  Vehicle Vehicle[]
  @@map("users")
}

model Vehicle {
  id           Int           @id @default(autoincrement())
  user_id      Int
  user         User          @relation(fields: [user_id], references: [id])
  license      String
  vehicle_type VEHICLE_TYPE  @default(LARGE)
  Reservation  Reservation[]
}
